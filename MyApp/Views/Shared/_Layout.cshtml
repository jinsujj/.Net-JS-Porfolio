<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content=".Net 개발자의 Portfolio 입니다.">
    <meta property="og:title" content="JS-Portfolio" />
    <meta property="og:description" content=".Net 개발자의 Portfolio 입니다." />
    <meta property="og:image" content="https://jinsu-blog.iptime.org/files/PortfolioMeta.jpg" />

    <title>@ViewBag.Title</title>

    <!-- include JQuery -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>

    <!-- include BootStrap -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" crossorigin="anonymous"></script>

    <!-- include SummerNote -->
    <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-bs4.min.css" rel="stylesheet">
    <link href="/js/summernote-bs4.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-bs4.min.js"></script>
    @*<script src="/js/summernote-bs4.min.js"></script>*@

    <!-- include SummerNote hightlight plugin -->
    <script src="/js/summernote-ext-highlight.js"></script>
    <script src="/js/summernote-ext-codewrapper.js"></script>

    <!--Font AweSome -->
    <script src="https://kit.fontawesome.com/3ec141240c.js" crossorigin="anonymous"></script>
    <!--Prety fy-->
    <script src="https://cdn.jsdelivr.net/gh/google/code-prettify@master/loader/run_prettify.js"></script>

    <!-- Toast Grid-->
    <link rel="stylesheet" href="https://uicdn.toast.com/grid/latest/tui-grid.css" />
    <script src="https://uicdn.toast.com/grid/latest/tui-grid.js"></script>

</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container">
            <div class="navbar-header">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">JS-Portfolio</a>
            </div>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                <partial name="_LoginPartial" />
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item"><a class="nav-link text-dark" asp-controller="Home" asp-action="Portfolio">Portfolio</a></li>
                    <li class="nav-item"><a class="nav-link text-dark" asp-controller="DotNetNote" asp-action="Index">Projects Blog</a></li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        @*<li class="nav-item"><a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Home</a></li>*@
                        @*<li class="nav-item"><a class="nav-link text-dark" asp-controller="Home" asp-action="Student">Student</a></li>*@
                    }
                </ul>
            </div>
        </div>
    </nav>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top footer text-muted">
        <div class="container">
            <p>
                &copy; @DateTime.Now.Year - JS_portfolio<br />
                &nbsp; &nbsp; Powered by .Net 5.0<br />
            </p>
        </div>
    </footer>

    @RenderSection("Scripts", required: false)
</body>
</html>
